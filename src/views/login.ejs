<%- include('includes/head') %>
<%- include('includes/nav') %>
  <div class="container">
    <div class="row">
      <div class="col-lg-2"></div>
      <div class="col-lg-8 my-5">
        <h1 class="text-center">Create account or log in</h1>
        <p class="text-center lead">Make login or create your account below: </p>
        <%- include('includes/messages')  %>

        <div class="row">
          <div class="col-lg">
            <h4>Make your account</h4>
            <p>If you don't have an account yet fill in the form</p>
            <form action="/login/register" method="post">
              <input type="hidden" name="_csrf" value=<%= csrfToken  %>>
              <div class="form-group">
                <label >Email address</label>
                <input type="email" class="form-control" name="email" placeholder="Enter email">
              </div>
              <div class="form-group my-3">
                <label >Password</label>
                <input type="password" class="form-control" name="password" placeholder="Enter password">
              </div>
              <button type="submit" class="btn btn-primary">create my account below</button>
            </form>
          </div>
          <div class="col-lg">
            <h4>enter the system</h4>
            <p>If you already have an account, make login below</p>
            <form action="/login/login" method="post">
              <input type="hidden" name="_csrf" value=<%= csrfToken  %>>
              <div class="form-group">
                <label >Email address</label>
                <input type="email" class="form-control" name="email" placeholder="Enter email">
              </div>
              <div class="form-group my-3">
                <label >Password</label>
                <input type="password" class="form-control" name="password" placeholder="Enter email">
              </div>
              <button type="submit" class="btn btn-primary">Enter</button>

          </div>
        </div>
        
      </div>
      <div class="col-lg-2"></div>
    </div>
  </div>
  <%- include('includes/footer') %>